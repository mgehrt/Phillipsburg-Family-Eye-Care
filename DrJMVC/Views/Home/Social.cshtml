@{
    ViewBag.Title = "Social";
}

<div class="col-md-12 mt-2">
    <div class="card text-center">
        <div class="card-body">
            <p class="card-title">Dr. Ron is a very involved leader in the Phillipsburg community. To stay up to date with Dr Ron's involvement be sure to connect with us on facebook!</p>

            <a type="button" href="https://www.facebook.com/phillipsburgfamilyeyecare/" class="fa fa-facebook btn">Facebook</a>
        </div>
    </div>
</div>

<div class="col-md-12">
    <div id="carouselExampleIndicators" class="carousel slide mt-2 border rounded" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>

        </ol>
        <div class="carousel-inner" style="background-color:#f6f5f3">
            <div class="carousel-item active">
                    <img class="card-img-top img-fluid" src="../../Content/Images/teeball.jpg" alt="First slide">
                    <div class=" carousel-caption">
                        <h5>TEAM NAME</h5>
                        <p>Dr. Ron had the opportunity to sponsor and watch the TEAM NAME this summer!</p>
                    </div>
            </div>
            <div class="carousel-item">
                    <img class="card-img-top img-fluid" src="~/Content/Images/golf.jpg" alt="Second slide">
                    <div class="carousel-caption">
                        <h5>2018 Profressional Family Eye Care - TAMKO Building Products </h5>
                        <p>Dr. Ron was a co-sponsor and participant in an annual golf tournament!</p>
                    </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="../../Content/Images/thursday.jpg" alt="Third slide">
                <div class="carousel-caption">
                    <h5>2018 Phillipsburg Rodeo Snapchat Competition </h5>
                    <p>Congratulations to the Thursday night winner Kirk Coomes!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="../../Content/Images/friday.jpg" alt="Fourth slide">
                <div class="carousel-caption">
                    <h5>2018 Phillipsburg Rodeo Snapchat Competition </h5>
                    <p>Congratulations to the Friday night winner Kylea & Barrett Strasburg!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="../../Content/Images/saturday.jpg" alt="Fifth slide">
                <div class="carousel-caption">
                    <h5>2018 Phillipsburg Rodeo Snapchat Competition </h5>
                    <p>Congratulations to the Saturday night winner Derek Foreman!</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>



<script>
    $(document).ready(function () {
        $('.carousel-caption').hide();
        $('img').hover(function () {
            $('.carousel-caption').fadeIn();
        });
    });
</script>