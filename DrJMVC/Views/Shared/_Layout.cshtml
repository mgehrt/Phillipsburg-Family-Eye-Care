<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="pt-0">
    <div class="jumbotron pt-1 pb-3 my-0">
        <h1>Phillipsburg Family Eye Care</h1>
        <p class="lead">Dr. Ron Juenemann has been providing high quality eye care since 1993!</p>
        @*<p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
    </div>
    <hr class="p-0 my-0" />
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e9ecef">
        @Html.ActionLink("Home", "Index", "Home", new { @class = " navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                @Html.ActionLink("About", "Index", "Home", new { @class = "nav-item nav-link" })
                @Html.ActionLink("Contact", "Contact", "Home", new { @class = "nav-item nav-link" })
                @Html.ActionLink("Social", "Social", "Home", new { @class = "nav-item nav-link" })
            </div>
        </div>
    </nav>

    <div class="container body-content pt-0">
        @RenderBody()
        
        <footer class="fixed-bottom">
            <hr />
            <p class="text-center">&copy; @DateTime.Now.Year - Phillipsburg Family Eye Care</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
